<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|fill_horizontal|center" >

        <ToggleButton
            android:id="@+id/toggleDrinks"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/ic_drinks"   
	        android:layout_margin="10dp"
	        android:textOn=""
	        android:textOff=""
	        android:focusable="false"
	        android:focusableInTouchMode="false"
	        android:layout_weight="1"
	        android:layout_centerVertical="true" />

        <ToggleButton
            android:id="@+id/toggleMusic"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/ic_music"   
	        android:layout_margin="10dp"
	        android:textOn=""
	        android:textOff=""
	        android:focusable="false"
	        android:focusableInTouchMode="false"
	        android:layout_weight="1"
	        android:layout_centerVertical="true" />


        <ToggleButton
            android:id="@+id/toggleGirls"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/ic_girls"   
	        android:layout_margin="10dp"
	        android:textOn=""
	        android:textOff=""
	        android:focusable="false"
	        android:focusableInTouchMode="false"
	        android:layout_weight="1"
	        android:layout_centerVertical="true" />


        <ToggleButton
            android:id="@+id/toggleGuys"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/ic_guys"   
	        android:layout_margin="10dp"
	        android:textOn=""
	        android:textOff=""
	        android:focusable="false"
	        android:focusableInTouchMode="false"
	        android:layout_weight="1"
	        android:layout_centerVertical="true" />

    </LinearLayout>

</LinearLayout>